---
import PlotFigure from "../../components/PlotFigure.astro";
import Layout from "../../layouts/Layout.astro";
import * as Plot from "@observablehq/plot";
import penguins from "../../assets/penguins.json";
import Navpingouin from "../../components/Navpingouin.astro";
---

<Layout>
  <h1 class="text-2xl">Adelie Penguins</h1>
  <PlotFigure
    options={{
      marks: [
        Plot.dot(penguins, {
          filter: (d) => d.species === "Adelie",
          x: "culmen_length_mm",
          y: "culmen_depth_mm",
          stroke: "species",
        }),
      ],
    }}
  />
  <Navpingouin />
</Layout>
